<!-- custom_list_item.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="307dp"
        android:layout_height="34dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:text="Username"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/usernameTextView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usernameTextView2"
        android:layout_width="95dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:text="Username:"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usernameTextView3"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:layout_marginStart="50dp"
        android:padding="8dp"
        android:text="Product Name:"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/usernameTextView4"
        app:layout_constraintEnd_toStartOf="@+id/requestedProductTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameTextView" />

    <TextView
        android:id="@+id/usernameTextView5"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="1dp"
        android:padding="8dp"
        android:text="Date Needed: YYYY/MM/DD
"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/requestedProductDateTextView"
        app:layout_constraintStart_toEndOf="@+id/usernameTextView6"
        app:layout_constraintTop_toBottomOf="@+id/requestedProductTextView" />

    <TextView
        android:id="@+id/usernameTextView4"
        android:layout_width="42dp"
        android:layout_height="31dp"
        android:layout_marginBottom="9dp"
        android:padding="8dp"
        android:text="QTY:"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/requestedProductQtyTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameTextView3" />

    <TextView
        android:id="@+id/usernameTextView6"
        android:layout_width="32dp"
        android:layout_height="31dp"
        android:layout_marginBottom="9dp"
        android:padding="8dp"
        android:text="KG"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/usernameTextView5"
        app:layout_constraintStart_toEndOf="@+id/requestedProductQtyTextView"
        app:layout_constraintTop_toBottomOf="@+id/requestedProductTextView" />

    <TextView
        android:id="@+id/requestedProductTextView"
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:layout_marginEnd="111dp"
        android:padding="8dp"
        android:text="Requested Product"
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/usernameTextView3"
        app:layout_constraintTop_toBottomOf="@+id/usernameTextView" />

    <TextView
        android:id="@+id/requestedProductQtyTextView"
        android:layout_width="70dp"
        android:layout_height="34dp"
        android:layout_marginBottom="6dp"
        android:padding="8dp"
        android:text="Requested Product Qty"
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/usernameTextView4"
        app:layout_constraintTop_toBottomOf="@+id/usernameTextView3" />

    <TextView
        android:id="@+id/requestedProductDateTextView"
        android:layout_width="170dp"
        android:layout_height="34dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="6dp"
        android:padding="8dp"
        android:text="Requested Product Date"
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/usernameTextView5"
        app:layout_constraintTop_toBottomOf="@+id/requestedProductTextView"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
