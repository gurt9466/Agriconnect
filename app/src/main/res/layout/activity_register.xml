<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">


  <TextView
      android:id="@+id/textView2"
      android:layout_width="201dp"
      android:layout_height="48dp"
      android:layout_marginTop="124dp"
      android:fontFamily="@font/libre_baskerville"
      android:text="Create New Account"
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="340dp"
      android:layout_height="91dp"
      android:layout_marginStart="73dp"
      android:layout_marginTop="36dp"
      android:layout_marginEnd="73dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.506"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/logo" />

  <EditText
      android:id="@+id/edtcfname"
      android:layout_width="316dp"
      android:layout_height="49dp"
      android:layout_marginStart="50dp"
      android:layout_marginTop="15dp"
      android:background="#ECECEC"
      android:ems="10"
      android:textAlignment="center"
      android:hint="Fisrt Name"
      android:inputType="text"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView3" />

  <EditText
      android:id="@+id/edtcusername"
      android:layout_width="316dp"
      android:layout_height="49dp"
      android:layout_marginStart="51dp"
      android:layout_marginTop="21dp"
      android:background="#ECECEC"
      android:ems="10"
      android:hint="Enter USERNAME"
      android:inputType="text"
      android:textAlignment="center"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView10" />

  <EditText
      android:id="@+id/edtcpasswd"
      android:layout_width="316dp"
      android:layout_height="49dp"
      android:layout_marginStart="51dp"
      android:layout_marginTop="8dp"
      android:background="#ECECEC"
      android:ems="10"
      android:hint="Enter PASSWORD"
      android:inputType="textPassword"
      android:textAlignment="center"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView9" />

  <EditText
      android:id="@+id/edtclname"
      android:layout_width="316dp"
      android:layout_height="49dp"
      android:layout_marginStart="50dp"
      android:layout_marginTop="15dp"
      android:layout_marginEnd="44dp"
      android:background="#ECECEC"
      android:ems="10"
      android:textAlignment="center"
      android:hint="Last Name"
      android:inputType="text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtcfname" />

  <EditText
      android:id="@+id/edtcemail"
      android:layout_width="316dp"
      android:layout_height="49dp"
      android:layout_marginStart="50dp"
      android:layout_marginTop="15dp"
      android:background="#ECECEC"
      android:ems="10"
      android:inputType="text"
      android:textAlignment="center"
      android:hint="Email"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView4" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="42dp"
      android:layout_marginTop="19dp"
      android:fontFamily="@font/libre_baskerville"
      android:text="Email"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cdob" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="42dp"
      android:layout_marginTop="20dp"
      android:fontFamily="@font/libre_baskerville"
      android:text="Address:"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtcemail" />

  <EditText
      android:id="@+id/edtcaddressstreet"
      android:layout_width="316dp"
      android:layout_height="49dp"
      android:layout_marginStart="50dp"
      android:layout_marginTop="15dp"
      android:background="#ECECEC"
      android:ems="10"
      android:inputType="text"
      android:textAlignment="center"
      android:hint="House#, Street"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView5" />

  <EditText
      android:id="@+id/edtcaddresscity"
      android:layout_width="149dp"
      android:layout_height="49dp"
      android:layout_marginStart="50dp"
      android:layout_marginTop="15dp"
      android:background="#ECECEC"
      android:ems="10"
      android:textAlignment="center"
      android:hint="City"
      android:inputType="text"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtcaddressstreet" />

  <EditText
      android:id="@+id/edtcaddressregion"
      android:layout_width="149dp"
      android:layout_height="49dp"
      android:layout_marginTop="15dp"
      android:layout_marginEnd="50dp"
      android:background="#ECECEC"
      android:ems="10"
      android:textAlignment="center"
      android:hint="Region"
      android:inputType="text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtcaddressstreet" />

  <EditText
      android:id="@+id/edtccnumber"
      android:layout_width="316dp"
      android:layout_height="49dp"
      android:layout_marginStart="50dp"
      android:layout_marginTop="15dp"
      android:background="#ECECEC"
      android:ems="10"
      android:hint="09XX-XXX-XXXX"
      android:inputType="number"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView6" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      android:layout_marginTop="80dp"
      android:text="Contact Number:"
      android:fontFamily="@font/libre_baskerville"
      android:textAlignment="center"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtcaddressstreet" />

  <TextView
      android:id="@+id/textView8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="42dp"
      android:layout_marginTop="20dp"
      android:text="Date of Birth:"
      android:fontFamily="@font/libre_baskerville"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/gender" />

  <EditText
      android:id="@+id/cdob"
      android:layout_width="316dp"
      android:layout_height="49dp"
      android:layout_marginStart="51dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="44dp"
      android:background="#ECECEC"
      android:ems="10"
      android:hint="YYYY-MM-DD"
      android:inputType="date"
      android:textAlignment="center"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView8" />

  <RadioGroup
      android:id="@+id/gender"
      android:layout_width="316dp"
      android:layout_height="49dp"
      android:layout_marginStart="50dp"
      android:layout_marginTop="15dp"
      android:background="#ECECEC"
      android:orientation="horizontal"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView7">

    <RadioButton
        android:id="@+id/male"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Male" />

    <RadioButton
        android:id="@+id/radioButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Female" />
  </RadioGroup>

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="42dp"
      android:layout_marginTop="20dp"
      android:fontFamily="@font/libre_baskerville"
      android:text="Name:"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtcpasswd" />

  <TextView
      android:id="@+id/textView9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="42dp"
      android:layout_marginTop="20dp"
      android:fontFamily="@font/libre_baskerville"
      android:text="Password:"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtcusername" />

  <TextView
      android:id="@+id/textView10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="42dp"
      android:layout_marginTop="20dp"
      android:fontFamily="@font/libre_baskerville"
      android:text="Username"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2" />

  <TextView
      android:id="@+id/textView7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="42dp"
      android:layout_marginTop="20dp"
      android:fontFamily="@font/libre_baskerville"
      android:text="Gender:"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtclname" />


  <TextView
      android:id="@+id/error"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="104dp"
      android:layout_marginTop="1124dp"
      android:text="Error while logging in... "
      android:textColor="#FA0000"
      android:textSize="15dp"
      android:visibility="gone"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ProgressBar
      android:id="@+id/loading"
      android:layout_width="85dp"
      android:layout_height="81dp"
      android:layout_marginTop="844dp"
      android:layout_marginEnd="160dp"
      android:visibility="gone"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
  <Button
      android:id="@+id/Cregisterbtn"
      android:layout_width="165dp"
      android:layout_height="59dp"
      android:layout_marginStart="145dp"
      android:layout_marginTop="69dp"
      android:layout_marginEnd="144dp"
      android:layout_marginBottom="76dp"
      android:backgroundTint="#FF9800"
      android:text="Register"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtccnumber" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>